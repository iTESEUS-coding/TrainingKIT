<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Second"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Bluetooth 연결 및 상태 확인 페이지">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_bluetooth_on"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/bluetooth_on">

                </ImageButton>

                <ImageButton
                    android:id="@+id/btn_bluetooth_off"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/bluetooth_off">

                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_connection"
                    android:layout_width="190dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/connection">

                </ImageButton>

                <TextView
                    android:id="@+id/tv_bluetooth_st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Bluetooth State">

                </TextView>

                <TextView
                    android:id="@+id/tv_connection_st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Connection State">

                </TextView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>